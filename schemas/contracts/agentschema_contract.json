{
  "version": "0.1.2",
  "name": "AgentSchema",
  "description": "Maintient les contrats JSON et migrations.",
  "topics": [
    "schema.contract.published",
    "schema.contract.deprecated"
  ],
  "envelope_schema": "schemas/contracts/event_envelope.schema.json",
  "payload_schema": {
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "AgentSchema payload",
    "type": "object",
    "properties": {
      "ref": {
        "type": "string"
      },
      "data": {
        "type": "object"
      }
    },
    "required": [
      "ref"
    ],
    "additionalProperties": true
  },
  "guards": {
    "local": [
      "tools/guards/schema_guard.ps1"
    ],
    "ci": [
      ".github/workflows/guards.yml"
    ]
  }
}